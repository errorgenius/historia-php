---
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
import GitHub from "./icons/GitHub.astro"
import Php from "./icons/Php.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <Php class="size-16" />
    <a
      href="https://php"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Versión actual: v8.3</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
  PHP: Cronología de un Código
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-blue-200 [&>strong]:text-blue-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +3 años de experiencia como desarrollador web. <strong
      > Estudiante de Ingeniería en Ciencias Informáticas</strong
    > de La Habana, Cuba.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:carlos.bramila98@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/carlos-brayan-error/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://www.github.com/carterror">
      <GitHub class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
